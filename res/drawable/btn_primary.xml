<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#05c"
                android:endColor="#05c"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#003580" />
            <corners
                android:radius="7px" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#08c"
                android:endColor="#05c"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#05c" />
            <corners
                android:radius="7px" />
        </shape>
    </item>

</selector>
